<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ycp.cs482.triviagame" >

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.ycp.cs482.triviagame.MainActivity"
            android:label="Trivia" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.ycp.cs482.triviagame.SignUp"
            android:label="Sign Up">
        </activity>
        <activity
            android:name="edu.ycp.cs482.triviagame.MenuPage"
            android:label="Menu">
        </activity>
        <activity
        android:name="edu.ycp.cs482.triviagame.Settings"
        android:label="Settings">
        </activity>
        <activity
            android:name="edu.ycp.cs482.triviagame.GamePage"
            android:label="Game">
        </activity>
        <activity
            android:name="edu.ycp.cs482.triviagame.MakeQuestion"
            android:label="Create Your Question!">
        </activity>
        <activity
            android:name="edu.ycp.cs482.triviagame.ModPage"
            android:label="Correct a question">
        </activity>
        <activity
            android:name="edu.ycp.cs482.triviagame.CorrectAQuestion"
            android:label="Fix Question">
        </activity>
        <activity
            android:name="edu.ycp.cs482.triviagame.StatPage"
            android:label="User's stats">
        </activity>
        <activity
            android:name="edu.ycp.cs482.triviagame.ShopPage"
            android:label="Shop Page">
        </activity>
        <receiver android:name=".AlertReceiver"></receiver>
        <receiver android:name=".GameAlertReciever"></receiver>
    </application>

</manifest>
